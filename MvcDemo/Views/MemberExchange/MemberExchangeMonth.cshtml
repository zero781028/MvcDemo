@{
    ViewBag.Title = "MemberExchangeMonth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1><i class="fa fa-table"></i>商品兌換月別查詢</h1>
    </div>
</div>
<hr />

@using (Html.BeginForm("MemberExchangeMonth", "MemberExchange", FormMethod.Post, new { id = "form1" }))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table>
                        <tr>
                            <td><strong>*兌換期間:</strong></td>
                            <td>
                                <p class="input-group">
                                    <input type="text" class="form-control required dateISO" id="TxtStYM" name="stym" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><i class="glyphicon glyphicon-calendar"></i></button>
                                    </span>
                                </p>
                            </td>
                            <td>
                                <p class="input-group">
                                    <input type="text" class="form-control required dateISO" id="TxtEdYM" name="edym" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><i class="glyphicon glyphicon-calendar"></i></button>
                                    </span>
                                </p>
                            </td>
                        </tr>                                            
                    </table>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i>查詢</button>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    明細結果
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr style="text-align: center; color: #fff; background: #8091AC; font-weight: bold;">
                                <td>商品代號</td>
                                <td>商品名稱</td>
                                <td>兌換數量</td>
                                <td>兌換點數</td>
                            </tr>
                        </thead>                        
                    </table>
                </div>
                <div class="panel-footer">
                    總筆數:
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        $(function () {
        });
    </script>
}